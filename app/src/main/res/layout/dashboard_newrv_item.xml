<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/withStoryStroke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/with_story"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/innerImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user1"
        app:layout_constraintStart_toStartOf="@id/withStoryStroke"
        app:layout_constraintEnd_toEndOf="@id/withStoryStroke"
        app:layout_constraintTop_toTopOf="@id/withStoryStroke"
        app:layout_constraintBottom_toBottomOf="@id/withStoryStroke"/>

    <TextView
        android:id="@+id/nameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aisha"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/innerImage"
        app:layout_constraintStart_toStartOf="@id/innerImage"
        app:layout_constraintEnd_toEndOf="@id/innerImage"/>

</androidx.constraintlayout.widget.ConstraintLayout>